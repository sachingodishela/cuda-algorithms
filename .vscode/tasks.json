{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with CUDA",
            "type": "shell",
            "command": "nvcc",
            "problemMatcher": [
                "$nvcc"
            ],
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.elf",
                "-g", // Add debug information
                "-G" // Generate device code suitable for debugging
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.elf",
            "dependsOn": "Build with CUDA",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
