{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current File With CUDA",
            "type": "shell",
            "command": "nvcc",
            "problemMatcher": [
                "$nvcc"
            ],
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.elf",
                "-g",
                "-G"
            ],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Build & Run Current File",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.elf",
            "dependsOn": "Build with CUDA",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
